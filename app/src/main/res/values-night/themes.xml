<resources >
    <!-- Base application theme. -->
    <style name="Theme.GymAssistant" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorPrimaryVariant">@color/light_red</item>
        <item name="colorOnPrimary">@color/light_red</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow</item>
        <item name="colorSecondaryVariant">@color/brown</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/yellow</item>
        <item name="actionMenuTextColor">@color/black</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@drawable/dialog_bg</item>
    </style>
</resources>